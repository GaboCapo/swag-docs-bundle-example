{% block swag_bundle_list %}
    <sw-page class="swag-bundle-list">
        <template slot="smart-bar-actions">
            <sw-button variant="primary" :routerLink="{ name: 'swag.bundle.create' }">Add bundle</sw-button>
        </template>

        <template slot="content">
            <sw-entity-listing
                v-if="bundles"
                :items="bundles"
                :repository="repository"
                :columns="columns"
                detailRoute="swag.bundle.detail">
            </sw-entity-listing>
        </template>
    </sw-page>
{% endblock %}
