<sw-page class="swag-bundle-detail">
    <template slot="smart-bar-actions">
        <sw-button :routerLink="{ name: 'swag.bundle.list' }">Cancel</sw-button>
        <sw-button variant="primary" @click="onClickSave">Save</sw-button>
    </template>

    <template slot="content">
        <sw-card-view>
            <sw-card v-if="bundle" title="General" :isLoading="isLoading">

                <sw-field label="Name" v-model="bundle.name"></sw-field>
                <sw-field label="Discount" v-model="bundle.discount" type="number" suffix="â‚¬"></sw-field>

                <sw-field
                        type="radio"
                        label="Discount type"
                        v-model="bundle.discountType"
                        :options="[
                      {'value': 'absolute', 'name': 'Absolute'},
                      {'value': 'percentage', 'name': 'Percentage'},
                    ]">
                </sw-field>

                <sw-entity-multi-select
                    label="Assign products"
                    :collection="bundle.products">
                </sw-entity-multi-select>
            </sw-card>
        </sw-card-view>
    </template>
</sw-page>
